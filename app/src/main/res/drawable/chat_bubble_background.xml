<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color for the chat bubble -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Optional border for the bubble -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" /> <!-- Padding inside the bubble -->
        </shape>
    </item>
</selector>
