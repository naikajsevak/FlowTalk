<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_lock_24"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="FORGOT PASSWORD"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginTop="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Provide your accounts email for which you want"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="to reset your password!"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/circle_background_for_call_activity"
            android:backgroundTint="#FCEFEAED"
            android:padding="18dp"
            android:shadowColor="@color/black"
            android:layout_marginTop="39dp"
            android:textColorHint="@color/black"
            />

        <Button
            android:id="@+id/reset_psw_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="6dp"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:text="RESET PASSWORD"
            android:textSize="17sp"
            android:padding="13dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#EAFF16"
            android:textColor="@color/black"
            android:text="Back"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:textSize="17sp"
            android:padding="13dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>